<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/double_proxy_constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/double_proxy_change_titile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="91dp"
        android:layout_marginTop="31dp"
        android:text="代理受け取り交代の画面です。"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/double_proxy_change_block_list"
        android:layout_width="113dp"
        android:layout_height="559dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="91dp"
        android:background="@drawable/listboder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/double_proxy_change_titile" />

    <ListView
        android:id="@+id/double_proxy_change_room_list"
        android:layout_width="130dp"
        android:layout_height="553dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/listboder"
        app:layout_constraintStart_toEndOf="@+id/double_proxy_change_block_list"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/double_proxy_change_ryosei_list"
        android:layout_width="654dp"
        android:layout_height="507dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/listboder"
        app:layout_constraintStart_toEndOf="@+id/double_proxy_change_room_list"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/double_proxyu_name_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="34dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/double_proxy_change_titile"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/double_proxy_change_go_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="896dp"
        android:layout_marginTop="612dp"
        android:text="go back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/double_proxy_change_titile" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/double_proxyu_name_show"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/proxy_editTextTextPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="検索したい名前を入力"
            android:inputType="textPersonName"
            android:maxLength="20"
            android:text="" />


        <Button
            android:id="@+id/proxy_name_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="寮生検索" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
