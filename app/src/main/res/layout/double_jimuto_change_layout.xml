<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/double_jimuto_change_titile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="91dp"
        android:layout_marginTop="31dp"
        android:text="事務当番交代の画面です。"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/double_jimuto_change_block_list"
        android:background="@drawable/listboder"
        android:layout_width="113dp"
        android:layout_height="559dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="91dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/double_jimuto_change_titile" />

    <ListView
        android:id="@+id/double_jimuto_change_room_list"
        android:background="@drawable/listboder"
        android:layout_width="130dp"
        android:layout_height="553dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toEndOf="@+id/double_jimuto_change_block_list"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/double_jimuto_change_ryosei_list"
        android:background="@drawable/listboder"
        android:layout_width="654dp"
        android:layout_height="507dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toEndOf="@+id/double_jimuto_change_room_list"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/double_jimutou_name_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="34dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/double_jimuto_change_titile"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/double_jimuto_change_go_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="896dp"
        android:layout_marginTop="612dp"
        android:text="go back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/double_jimuto_change_titile" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="名前検索"
        app:layout_constraintStart_toEndOf="@+id/double_jimutou_name_show"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>